generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Wish {
  id          String      @id @default(cuid())
  name        String
  text        String
  ipAddress   String      
  anonId      String      @unique
  createdAt   DateTime    @default(now())
  likes       WishLike[]      
}

model WishLike {
  id          String      @id @default(cuid())
  wishId      String
  anonId      String
  createdAt   DateTime    @default(now())

  wish        Wish        @relation(fields: [wishId], references: [id], onDelete: Cascade)

  @@unique([wishId, anonId])
}